# GarageManager Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Neon PostgreSQL Database URL
# Format: postgresql://username:password@host/database?sslmode=require
DATABASE_URL=postgresql://your_username:your_password@your_host.neon.tech/your_database?sslmode=require

# ============================================
# DVSA MOT HISTORY API (OAuth 2.0)
# ============================================
# Your approved MOT History API credentials
DVSA_CLIENT_ID=your_client_id_here
DVSA_CLIENT_SECRET=your_client_secret_here
DVSA_API_KEY=your_api_key_here
DVSA_SCOPE_URL=https://tapi.dvsa.gov.uk/.default
DVSA_TOKEN_URL=https://login.microsoftonline.com/a455b827-244f-4c97-b5b4-ce5d13b4d00c/oauth2/v2.0/token

# Legacy DVSA API Key (if using old authentication method)
DVSA_API_KEY_LEGACY=your_legacy_key_here

# ============================================
# DVLA VEHICLE ENQUIRY API
# ============================================
# DVLA API Key for vehicle information lookup
DVLA_API_KEY=your_dvla_api_key_here

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ============================================
# TWILIO (SMS & WhatsApp)
# ============================================
# Twilio Account Credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Twilio Phone Numbers
TWILIO_PHONE_NUMBER=+44xxxxxxxxxx
TWILIO_WHATSAPP_NUMBER=whatsapp:+44xxxxxxxxxx

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# Resend API Key for email notifications
RESEND_API_KEY=your_resend_api_key_here

# ============================================
# AI SERVICES (Optional)
# ============================================
# OpenAI API Key for AI features
OPENAI_API_KEY=your_openai_api_key_here

# Minimax AI API Key (if using)
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_minimax_group_id_here

# ============================================
# APPLICATION SETTINGS
# ============================================
# Node Environment
NODE_ENV=development

# Application URL (for production)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# Enable/disable specific features
ENABLE_MOT_REMINDERS=true
ENABLE_WHATSAPP=true
ENABLE_SMS=true
ENABLE_EMAIL=true
